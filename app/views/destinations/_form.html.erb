<%= form_for(@destination) do |f| %>
  <% if @destination.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h2>

      <ul>
      <% @destination.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="form-group col-md-6">
    <%= f.text_field :city, class: "form-control", placeholder: "City" %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-6">
    <%= f.text_field :country, class: "form-control", placeholder: "Country" %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-6">
    <%= f.number_field :population, class: "form-control", placeholder: "Population (in millions)", step: :any %>
  </div>
</div>

<div class="field form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: "form-control" %>
</div>
<div class="field form-group">
  <%= f.label :latitude %><br>
  <%= f.text_field :latitude, class: "form-control" %>
</div>
 <div class="field form-group">
  <%= f.label :longitude %><br>
  <%= f.text_field :longitude, class: "form-control" %>
</div>

<div class="row">
  <div class="form-group col-md-12">
    <%= f.text_area :description , class: "form-control", placeholder: "Description" %>
  </div>
</div>

<div class="form-group">
  <%= f.label "Photo" %><br>
  <%= f.file_field :avatar %>
</div>


<div class="actions form-group">
  <%= f.submit class: "btn btn-success" %>
</div>

<% end %>
